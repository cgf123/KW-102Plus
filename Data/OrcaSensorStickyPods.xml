	<GameObject
		id="GDIOrcaSensorStickyPod"
		SelectPortrait="Portrait_NeutralSensorPod"
		ButtonImage="Portrait_NeutralSensorPod"
		Side="GDI"
		EditorSorting="UNIT"
		TransportSlotCount="0"
		CommandSet="EmptyCommandSet"
		IsTrainable="false"
		KindOf="PRELOAD NO_COLLIDE UNATTACKABLE NOT_AUTOACQUIRABLE IGNORE_FOR_VICTORY"
		RadarPriority="UNIT"
		EditorName="GDIOrcaSensorStickyPod_Neutral">
		<DisplayName>Name:GDIOrcaSensorPod</DisplayName>
		<ArmorSet
			Armor="GDIOrcaSensorPodArmor"
			DamageFX="NormalDamageFX" />
		<LocomotorSet
			Locomotor="HumanLocomotor"
			Condition="NORMAL"
			Speed="0.0" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="W3DContainer:GUSensor" />
				</ModelConditionState>
			</ScriptedModelDraw>
			<SpotlightDraw
				id="ModuleTag_Spotlight"
				AttachToBoneInAnotherModule="GDISENSOR"
				RefreshTime="2.0s"
				SweepTime="1.0s">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="W3DMesh:FXspotlight" />
				</ModelConditionState>
			</SpotlightDraw>
		</Draws>
		<Behaviors>
			<Physics
				id="ModuleTag_Physics" />
			<InvisibilityUpdate
				id="ModuleTag_Invisibility"
				Options="STARTS_ACTIVE">
				<InvisibilityNugget />
			</InvisibilityUpdate>
			<StealthDetectorUpdate
				id="ModuleTag_StealthDetect"
				DetectionRange="350" />
			<LifetimeUpdate
				id="ModuleTag_LifeTime"
				MinLifetime="120s"
				MaxLifetime="120s" />
			<AttachUpdate
				id="ModuleTag_Attach"
				Range="10.0"
				Teleport="true"
				UseGeometry="true"
				DetachWhenParentHealed="true">
				<ObjectFilter
					Rule="ALL">
					<ExcludeThing>AlienCrystalShield</ExcludeThing>
				</ObjectFilter>
			</AttachUpdate>
			<DestroyDie
				id="ModuleTag_DestroyDie">
				<DieMuxData
					DeathTypes="ALL" 
				/>
			</DestroyDie>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_GDI_SensorPodExplosion" />
			</FXListBehavior>
		</Behaviors>
		<AI>
			<AIUpdate
				id="ModuleTag_AI"
				AutoAcquireEnemiesWhenIdle="YES" />
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="20" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="CYLINDER"
				MajorRadius="7.0"
				Height="13.0"></Shape>
		</Geometry>
		<AudioArrayVoice>
			<AudioEntry Sound="AudioEvent:GDI_Orca_SensorPodExplosion" AudioType="voiceSelect" />
		</AudioArrayVoice>
		<AudioArraySound>
			<AudioEntry Sound="AudioEvent:GDI_Orca_SensorPodGroundImpact" AudioType="soundAmbient" />
		</AudioArraySound>
		<ShadowInfo
			Type="DECAL"
			SizeX="14"
			SizeY="14"
			Texture="ShadowI" />
		<VisionInfo
			VisionRange="500"
			ShroudClearingRange="500" />
		<CrusherInfo
			CrushableLevel="0" />
	</GameObject>
	
